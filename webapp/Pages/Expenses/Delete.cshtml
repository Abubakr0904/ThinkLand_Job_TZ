@page
@model webapp.Pages.Expenses.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<head>
    <base href="../../../">
    <link href="assets/plugins/global/plugins.bundle.css" rel="stylesheet" type="text/css" />
    <link href="assets/plugins/custom/prismjs/prismjs.bundle.css" rel="stylesheet" type="text/css" />
    <link href="assets/css/style.bundle.css" rel="stylesheet" type="text/css" />
</head>

<div class="card card-custom">
    <div class="card-header">
        <h3 class="card-title">
            Delete Expene
        </h3>
    </div>
    <!--begin::Form-->
    <form class="form" method="post">
        <input asp-for="@Model.Expense.Id" hidden />
        <div class="card-body">
            <div class="form-group">
                <label asp-for="@Model.Expense.Name">Name</label>
                <input type="text" class="form-control" disabled="disabled" placeholder="@Model.Expense.Name" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Expense.Amount">Amount</label>
                <input type="text" class="form-control" disabled="disabled" placeholder="@Model.Expense.Amount" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Expense.CreatedAt">Created Date</label>
                <input type="text" class="form-control" disabled="disabled" placeholder="@Model.Expense.CreatedAt.ToLocalTime().ToString(@Model.Culture)" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Expense.UpdatedAt">Last Modified</label>
                <input type="text" class="form-control" disabled="disabled" placeholder="@Model.Expense.UpdatedAt.ToLocalTime().ToString(@Model.Culture)" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Expense.Category.Name">Category</label>
                <input type="text" class="form-control" disabled="disabled" placeholder="@Model.Expense.Category.Name" />
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-danger mr-2">Delete</button>
            <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
    <!--end::Form-->
</div>
@section Scripts{
    @{ <partial name="_ValidationScriptsPartial" /> }
}
