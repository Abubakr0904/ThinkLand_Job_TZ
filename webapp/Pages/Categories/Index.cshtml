@page
@model webapp.Pages.Categories.IndexModel

@{
    ViewData["Title"] = "Categories";
}

@* Start Data Table *@
<div class="card">
    <div class="card-header flex-wrap border-0 pt-6 pb-0">
        <div class="card-title">
            <h3 class="card-label">Category List
            <span class="d-block text-muted pt-2 font-size-sm">Expense Categories</span></h3>
        </div>
        <div class="card-toolbar d-flex justify-content-end">
            <!--begin::Button-->
            <a asp-page="Create" class="btn btn-primary font-weight-bolder">
            <span class="svg-icon svg-icon-md">
                <!--begin::Svg Icon | path:assets/media/svg/icons/Design/Flatten.svg-->
                <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                    <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                        <rect x="0" y="0" width="24" height="24" />
                        <circle fill="#000000" cx="9" cy="15" r="6" />
                        <path d="M8.8012943,7.00241953 C9.83837775,5.20768121 11.7781543,4 14,4 C17.3137085,4 20,6.6862915 20,10 C20,12.2218457 18.7923188,14.1616223 16.9975805,15.1987057 C16.9991904,15.1326658 17,15.0664274 17,15 C17,10.581722 13.418278,7 9,7 C8.93357256,7 8.86733422,7.00080962 8.8012943,7.00241953 Z" fill="#000000" opacity="0.3" />
                    </g>
                </svg>
                <!--end::Svg Icon-->
            </span>New Category</a>
            <!--end::Button-->
        </div>
    </div>
    <div class="card-body cat-table-wrapper">
        <table class="table table-separate table-head-custom table-checkable category-table">
            <thead class="cat-thead">
                <tr>
                    <th>ID</th>
                    <th>Category Name</th>
                    <th>Created Date</th>
                    <th>Updated Date</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody class="cat-tbody">
                @if(Model.Categories != null)
                {
                    @foreach (var obj in Model.Categories)
                    {
                        <tr>
                            <td>
                                @obj.Id.ToString().Substring(0, 10)
                            </td>
                            <td>
                                @obj.Name
                            </td>
                            <td>
                                @obj.CreatedAt.ToLocalTime().ToString("dd MMM yyyy HH:mm:ss")
                            </td>
                            <td>
                                @obj.UpdatedAt.ToLocalTime().ToString("dd MMM yyyy HH:mm:ss")
                            </td>
                            <td style="min-width: 147px;" class="text-center" nowrap="nowrap">
                                <a asp-page="./Edit" asp-route-id="@obj.Id" 
                                class="btn btn-primary pl-5"> <i class="bi bi-pencil-square"></i></a>
                                
                                <a asp-page="./Delete" asp-route-id="@obj.Id" 
                                class="btn btn-danger pl-5"> <i class="bi bi-trash-fill"></i></a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>

        @* Pagination Start *@
        @* <nav aria-label="Page navigation example">
            <ul class="pagination">
