@page
@model webapp.Pages.Account.LoginModel

@{
    ViewData["Title"] = "Login";
}

<form class="d-flex justify-content-center form-signup" method="post">

    <div class="login-box" style="margin-top:70px;">
        <h4 class="text-primary text-center brand-text font-weight-light">Expense App</h4>
        <a href="/" class="brand-link d-flex justify-content-center">
        </a>
        <div class="card">
            <div class="card-body login-card-body">
                <h3 class="login-box-msg text-center">Log in</h3>

                <form method="post">
                    @if(@Model?.loginViewModel?.ErrorMessage is not null)
                    {
                        <div class="d-flex text-wrap">
                            <p class="text-danger">@Model.loginViewModel.ErrorMessage</p>
                        </div>
                    }
                    <div class="mb-3">
                        <label asp-for="loginViewModel.UserName" class="d-none"></label>
                        <input asp-for="loginViewModel.UserName" class="form-control mb-2" placeholder="User Name"/>
                        <span asp-validation-for="loginViewModel.UserName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="loginViewModel.Password" class="d-none"></label>
                        <input asp-for="loginViewModel.Password" class="form-control mb-2" placeholder="Password"/>
                        <span asp-validation-for="loginViewModel.Password" class="text-danger"></span>
                    </div>
                    <div class="d-flex row">
                        <div class="col text-center">
                            <button class="w-100 btn btn-primary">Sign In</button>
                        </div>
                    </div>
                    <br>
                </form>
                <div class="d-flex justify-content-center col-12">
                    <span>No Account?</span> &nbsp;
                    <a asp-page="./Register" class="text-center ">
                        <span>Register</span>
                    </a>
                </div>
                
            </div>
        </div>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}